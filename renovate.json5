{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>univention/dev/nubus-for-k8s/common-renovate#v1.2.0"
  ],
  "baseBranchPatterns": [
    "develop"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "helm/nubus/Chart.yaml",
        "helm/nubus/values.yaml"
      ],
      "matchPackageNames": [
        "artifacts.software-univention.de/nubus/charts/**",
        "artifacts.software-univention.de/nubus/images/**"
      ],
      "groupName": "nubus subcharts",
      "separateMajorMinor": false
    },
    {
      "matchManagers": [
        "helmv3",
        "helm-values"
      ],
      "semanticCommitType": "fix"
    }
  ]
}
